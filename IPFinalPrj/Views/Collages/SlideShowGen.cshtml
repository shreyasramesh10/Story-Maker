@model IEnumerable<IPFinalPrj.Models.StoryBlock>
    @{
        ViewBag.Title = "SlideShowGen";
    }

<body>
    <h2>SlideShowGen</h2>
    <style>
        .slideshowgen img {
            position: absolute;
            width: 50%; /* for IE 6 */
        }

        .slideshowgen figure {
            position: relative;
            top: 200px;
            left: 0;
            width: 100%;
        }

        .slideshowgen h2 span {
            position: absolute;
            color: white;
            font: bold 24px/45px Helvetica, Sans-Serif;
            letter-spacing: -1px;
            background: rgb(0, 0, 0); /* fallback color */
            background: rgba(0, 0, 0, 0.7);
            padding: 10px;
        }
    </style>
    <script>
        window.onload = function () {
            $('.slideshowgen img:gt(0)').hide();
            setInterval(function () { $('.slideshowgen :first-child').fadeOut(500).next('img').fadeIn(500).end().appendTo('.slideshowgen'); }, 2800);
        };
    </script>
    <div class="slideshowgen">
        @foreach (var item in Model)
        {
            <img src="@Url.Content("~/UploadedFiles/" + item.ImgName)" alt="" />
        }
    </div>
</body>

